<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    android:backgroundTint="#74FFFFFF"
    android:backgroundTintMode="src_atop"
    android:layout_centerHorizontal="true"
    tools:context=".MainActivity" >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dettagliese"
        android:layout_width="135dp"
        android:layout_height="68dp"
        android:layout_marginBottom="104dp"
        android:background="#9621AF"
        android:backgroundTint="#D3AB5EBC"
        android:text="Dettagli Esercizi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.782"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workoutgiorno"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/areapersonale"
        android:layout_width="135dp"
        android:layout_height="68dp"
        android:background="#9621AF"
        android:backgroundTint="#D3AB5EBC"
        android:text="Area Personale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.663" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/workoutgiorno"
        android:layout_width="135dp"
        android:layout_height="68dp"
        android:background="#9621AF"
        android:backgroundTint="#D3AB5EBC"
        android:text="Allenamento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.782"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.663" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/progressopersona"
        android:layout_width="135dp"
        android:layout_height="68dp"
        android:layout_marginBottom="104dp"
        android:background="#9621AF"
        android:backgroundTint="#D3AB5EBC"
        android:text="Progresso"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areapersonale"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:layout_width="218dp"
        android:layout_height="182dp"
        android:foregroundTint="#D3AB5EBC"
        android:indeterminateTint="#F0CC16C9"
        android:progressBackgroundTint="#D3AB5EBC"
        android:progressTint="#D3AB5EBC"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

</androidx.constraintlayout.widget.ConstraintLayout>