<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    android:backgroundTint="#74FFFFFF"
    android:backgroundTintMode="src_atop"
    android:layout_centerHorizontal="true"
    tools:context=".AllenamentoPaziente">

    <ImageView
        android:id="@+id/immagineAllenamento"
        android:layout_width="413dp"
        android:layout_height="280dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09"
        tools:srcCompat="@tools:sample/avatars" />

    <Chronometer
        android:id="@+id/simpleChronometer"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:textAlignment="center"
        android:textColor="#9621AF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.845" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/prossimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9621AF"
        android:backgroundTint="#D3AB5EBC"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpleChronometer"
        app:layout_constraintVertical_bias="0.357" />

    <TextView
        android:id="@+id/dolorevisualizza"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginTop="48dp"
        android:text="Livello di dolore dell'esercizio "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/simpleChronometer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/immagineAllenamento"
        app:layout_constraintVertical_bias="0.0" />

    <RatingBar
        android:id="@+id/livellodolore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foregroundTint="#450653"
        android:isIndicator="false"
        android:progressTint="#390345"
        android:scaleX=".5"
        android:scaleY=".5"
        android:stepSize=".5"
        android:transformPivotX="130dp"
        android:transformPivotY="30dp"
        app:layout_constraintBottom_toTopOf="@+id/simpleChronometer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dolorevisualizza"
        app:layout_constraintVertical_bias="0.561" />


</androidx.constraintlayout.widget.ConstraintLayout>